<h1>Sign up!</h1>
<div class="card">
    <div class="card-body, container-fluid, bg-dark, text-bg-primary p-3, position-absolute top-50 start-50 translate-middle ">
        <form >
            <input type="text" name="username" placeholder="Username" id="signupUser">
            <input type="password" name="password" placeholder="Password" id="signupPass">
            <input type="submit" value="Sign Up" id="signupBtn">
        </form>
    </div>
</div>

<p id="errorMessage"></p><br><br>

<p>Already have an account?</p>
<a href="/login">Log in!</a>

<script src="/js/signup.js"></script>