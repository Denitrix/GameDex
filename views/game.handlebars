<h3 id="gameTitle"data-game-id="{{game.id}}">{{game.name}}</h3><br />
{{#if game.cover}}
  <img src="{{game.cover}}" /><br /> 
{{/if}}

<a href="{{game.url}}" target="_blank">IGDB rating: {{game.igdb_rating}}</a><br />

{{#if game.release_date}}
  <p>Release Date: {{formatReleaseDate game.release_date}}</p><br />
{{else}}
  <p>Release Date: Not Available</p><br />
{{/if}}

{{#if (hasGame game.id userGames)}}
<button type="button" id="removeBtn">Remove Game from Library</button><br><br>
{{else}}
<button type="button" id="addBtn">Add Game to Library</button><br><br>
{{/if}}

{{#if game.summary}}
<p>{{game.summary}}</p>
{{/if}}

<h5>Reviews</h5><br />
{{#if game.reviews}}
{{#each game.reviews as |review|}}
{{> reviews}}
{{/each}}
{{/if}}

{{#if (hasGame game.id userGames)}}
<script src="/js/removeGame.js"></script>
{{else}}
<script src="/js/addGame.js"></script>
{{/if}}